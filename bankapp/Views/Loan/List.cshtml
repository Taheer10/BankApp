@model IEnumerable<bankapp.Models.Loan.Loan>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                <label class="control-label">Member</label>
            </th>
            <th>
                <label class="control-label">LoanType</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FirstName)  @Html.DisplayFor(modelItem => item.Member.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanType.LoanName)
                </td>
              
            </tr>
        }
    </tbody>
</table>

